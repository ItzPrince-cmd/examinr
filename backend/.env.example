# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000/api
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/examinr

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
ACCESS_TOKEN_EXPIRE=15m
REFRESH_TOKEN_EXPIRE=7d

# Session & CSRF
SESSION_SECRET=your-session-secret-change-this-in-production
CSRF_SECRET=your-csrf-secret-change-this

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
INTERNAL_API_KEY=your-internal-api-key
WEBHOOK_API_KEYS=webhook-key-1,webhook-key-2

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WHITELIST=127.0.0.1,::1

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Examinr <noreply@examinr.com>

# Razorpay (Payment Gateway)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Redis (Optional - for session storage and rate limiting)
REDIS_URL=redis://localhost:6379

# File Upload
MAX_FILE_SIZE=5242880

# Logging
LOG_LEVEL=info

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Production Domains (for CORS whitelist)
PRODUCTION_DOMAINS=https://examinr.com,https://www.examinr.com,https://app.examinr.com

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_EMAIL_VERIFICATION=true
MAINTENANCE_MODE=false